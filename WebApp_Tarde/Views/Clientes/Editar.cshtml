@model WebApp_Tarde.Models.ClientesViewModel

<div class="row">
    <div class="col-4">
    </div>
    <div class="col-4">
        <div class="card" style="background-color: blue">
            <div class="card-header">
                <h3>Editar Cliente</h3>
            </div>
            <div class="card-body">
                <form action="/Clientes/SalvarDados" method="post">
                    <label>Código</label>
                    <input name="Id" type="text" readonly value="@Model.Id" class="form-control" />
                    <br />
                    <label>Nome</label>
                    <input type="text" name="Nome" value="@Model.Nome" class="form-control" />
                    <br />
                    <label>Telefone</label>
                    <input type="text" name="Telefone" value="@Model.Telefone" class="form-control" />
                    <br />
                    <button type="submit" class="btn btn-success">Salvar Cliente</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-4">
    </div>
    <div class="col-4">
    </div>
</div>